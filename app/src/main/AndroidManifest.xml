<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sdu.myflag">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activity.GuideActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.MainActivity" />

        <activity
            android:name=".activity.LoginActivity"
            android:launchMode="singleInstance" />

        <activity android:name=".activity.RegisterActivity" />

        <activity android:name=".activity.CreateFlagActivity" />

        <activity android:name=".activity.SearchFriendActivity" />
        <activity android:name=".activity.AddFriendActivity" />
        <activity android:name=".activity.ConfirmFriendActivity" />
        <activity android:name=".activity.AddFriendMessageActivity" />
    </application>

</manifest>